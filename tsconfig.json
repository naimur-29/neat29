// tsconfig.json
{
  "compilerOptions": {
    "target": "es2018", // Or "es2020", "esnext", etc. for modern features
    "module": "commonjs", // Or "esnext", but "commonjs" is generally safer for Node.js
    "outDir": "./dist", // Output directory for compiled JS (optional for ts-node)
    "rootDir": "./", // Root directory for source files (optional for ts-node)
    "strict": true, // Good practice for type safety
    "esModuleInterop": true, // Recommended for better interop with CommonJS
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file casing
  },
  "include": [
    "**/*.ts" // Include all TypeScript files
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}
